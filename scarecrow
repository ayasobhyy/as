#include <bits/stdc++.h>
#include<iostream>
#include<fstream>
using namespace std;
int main()
{
      ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);

    int t,x=1;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        char a[n];


        for(int i=0;i<n;i++)
        {
            cin>>a[i];
        }

        int c=0;

            for(int i=0;i<n;i++)
        {
          
                if(a[i]=='.')
        {
                   c++;
                   i+=2;
        }
        }
        
        cout<<"Case"<<" "<<x<<":"<<" "<<c<<endl;
        x++;

    }

 	return 0;
}
